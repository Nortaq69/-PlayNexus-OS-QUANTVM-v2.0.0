{
  "name": "neon-archivist-os-quantvm",
  "version": "2.0.0",
  "description": "PlayNexus // OS:QUANTVM - Self-evolving, interactive, sentient system core",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "neon-archivist",
    "quantvm",
    "file-organizer",
    "ai-powered",
    "cyberpunk",
    "quantum",
    "sentient-system"
  ],
  "author": "Captain Bladebyte",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "gsap": "^3.12.2",
    "d3": "^7.8.5",
    "three": "^0.158.0",
    "crypto-js": "^4.2.0",
    "chokidar": "^3.5.3",
    "fs-extra": "^11.1.1"
  },
  "build": {
    "appId": "com.neonarchivist.quantvm",
    "productName": "PlayNexus // OS:QUANTVM",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
} 